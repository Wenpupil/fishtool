<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BiologyInfoActivity">

    <include layout="@layout/custom_top"
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <!-- main content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:text="@string/biology_info_name"
                android:textSize="22sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/namech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_margin="@dimen/text_margin"
                android:layout_centerHorizontal="true"
                android:text="@string/biology_info_namech"
                android:textSize="14sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="@dimen/text_margin"
                android:layout_below="@+id/namech"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/content"
                android:layout_margin="@dimen/text_margin"
                android:layout_below="@id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>